{
  "manifest_version": 3,
  "name": "Smart Auto Clicker",
  "version": "1.0.0",
  "description": "Auto click elements with fixed or random intervals to avoid bot detection",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Auto Clicker"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
